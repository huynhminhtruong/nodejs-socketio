<div class="row" style = "margin-top: 10%;">
  <div class="col-xs-6 col-md-4"></div>
  <div class="col-xs-6 col-md-4">
    <form class="" id="login-form" action={{method}} method="POST" enctype="multipart/form-data">
      <h2 class="form-signin-heading">{{title}}</h2>
      <label for="inputEmail" class="sr-only">{{description}}</label>
      <input type="text" id="inputEmail" name="name" class="form-control" placeholder="{{description}}" required autofocus>
      <input type="file" id="inputFile" name="file" class="form-control" placeholder="Select your picture" required>
      <button class="btn btn-lg btn-default btn-block" type="submit">{{action}}</button>
    </form>
  </div>
  <div class="col-xs-6 col-md-4"></div>
</div>